<h1>All Lists</h1>
<div class="flex flex-wrap -mx-2 overflow-hidden sm:-mx-3 md:-mx-3 lg:-mx-2 xl:-mx-2">
  
  <% @lists.each do |list| %>
	<% 
	if list.photo.attached?
		picture = cl_image_path list.photo.key, height: 150, width: 400, crop: :fill
	else
		picture = cl_image_path "action_hx5ypt", height: 150, width: 400, crop: :fill
	end
	 %>
		<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= picture %>)">
  		<%= list.name %> </div>
		<div>	<%= link_to "details", list_path(list), class: "btn btn-primary"%>
		</div>
    	<div>	<%= link_to "add bookmark", new_list_bookmark_path(list), class: "btn btn-primary"%>
		</div>
	<% end %>
	
	<div><%= link_to "create new list", new_list_path, class: "btn btn-primary"%></div>
	</div>
	
	
